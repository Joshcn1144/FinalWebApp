<div id="<%= dom_id menu_item %>">
  <p>
    <strong>Name:</strong>
    <%= menu_item.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= menu_item.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= menu_item.description %>
  </p>

  <p>
    <strong>Available:</strong>
    <%= menu_item.available %>
  </p>

  <p>
    <strong>Base menu:</strong>
    <%= menu_item.base_menu_id %>
  </p>

</div>
