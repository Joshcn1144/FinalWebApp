<h1>Menu items</h1>

<div id="menu_items">
  <% @menu_items.each do |menu_item| %>
    <%= render menu_item %>
    <p>
      <%= link_to "Show this menu item", [@base_menu] %>
    </p>
  <% end %>
</div>

<%= link_to "New menu item", new_base_menu_menu_item_path(@base_menu) %>
