<%= form_with(model: [@owner, @base_menu, @menu_item], local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :item, "Item Name", class: "form-label text-burgundy" %>
    <%= form.text_field :item, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label text-burgundy" %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Price ($)", class: "form-label text-burgundy" %>
    <%= form.number_field :price, step: 0.01, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :available, "Availability", class: "form-label text-burgundy" %>
    <%= form.check_box :available, class: "form-check-input" %>
    <%= form.label :available, "Available?", class: "form-check-label" %>
  </div>

  <div class="text-center">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", owner_base_menu_menu_items_path(@owner, @base_menu), class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
