<div class="container mt-5">
  <div class="text-center mb-4">
    <h1><%= @base_menu.title %></h1>
    <p class="lead"><%= @base_menu.description %></p>
    <div class="menu-divider"></div>
  </div>

  <!-- Example Section for Menu Items -->
  <div class="row">
    <% @base_menu.menu_items.each do |item| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="card-title"><%= item.name %></h3>
            <p class="card-text"><%= item.description %></p>
            <p class="text-muted"><strong>Price:</strong> $<%= item.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="text-center mt-4">
    <%= link_to "Edit Menu", edit_owner_base_menu_path(@owner, @base_menu), class: "btn btn-secondary me-2" %>
    <%= link_to "Back to Menus", owner_base_menus_path(@owner), class: "btn btn-outline-secondary" %>
    <%= button_to "Delete Menu", [@owner, @base_menu], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>
