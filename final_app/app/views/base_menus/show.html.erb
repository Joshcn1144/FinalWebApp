<h1 class="text-center text-burgundy"><%= @base_menu.title %></h1>
<p class="text-center"><%= @base_menu.description %></p>
<hr class="menu-divider">

<h2 class="text-burgundy">Menu Items</h2>
<%= link_to "Add New Menu Item", new_owner_base_menu_menu_item_path(@owner, @base_menu), class: "btn btn-primary mb-3" %>

<% if @base_menu.menu_items.any? %>
  <div class="row">
    <% @base_menu.menu_items.each do |menu_item| %>
      <div class="col-md-4">
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h5 class="card-title text-burgundy"><%= menu_item.item %></h5>
            <p class="card-text"><%= menu_item.description %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(menu_item.price) %></p>
            <p class="card-text"><strong>Availability:</strong> <%= menu_item.available ? 'Available' : 'Not Available' %></p>
            <hr>
            <div class="d-flex justify-content-between">
              <%= link_to "Edit", edit_owner_base_menu_menu_item_path(@owner, @base_menu, menu_item), class: "btn btn-sm btn-outline-secondary" %>
              <%= button_to "Delete", owner_base_menu_menu_item_path(@owner, @base_menu, menu_item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">No menu items found for this base menu.</p>
<% end %>

<div class="mt-4">
  <%= link_to "Edit Base Menu", edit_owner_base_menu_path(@owner, @base_menu), class: "btn btn-secondary" %>
  <%= link_to "Back to Base Menus", owner_base_menus_path(@owner), class: "btn btn-primary" %>
  <%= button_to "Delete Base Menu", owner_base_menu_path(@owner, @base_menu), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
