<p class="alert alert-success" role="alert"><%= notice %></p>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title"><%= @owner.name %></h1>
      <p class="card-text"><strong>Company:</strong> <%= @owner.company_name %></p>
    </div>
  </div>

  <div class="mt-4">
    <div class="btn-group" role="group" aria-label="Owner actions">
      <%= link_to "Edit this Owner", edit_owner_path(@owner), class: "btn btn-secondary" %>
      <%= link_to "Add Base Menu", owner_base_menus_path(@owner), class: "btn btn-primary" %>
      <%= link_to "Back to Owners", owners_path, class: "btn btn-outline-secondary" %>
    </div>
    <div class="mt-2">
      <%= button_to "Destroy this Owner", @owner, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this owner?" } %>
    </div>
  </div>
</div>
